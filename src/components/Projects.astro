---
import LinkIcon from "./icons/LinkIcon.astro";

const PROJECTS = [
  {
    title: "Clínica Dental Dual",
    description:
      "Desarrollo de aplicación móvil para la gestión pacientes, inventarios, reportes, etc.",
    link: null,
    github: null,
    image: null,
    tags: ["Flutter", "Dart", "Firebase"],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, link }) => {
    return (
      <article class="flex flex-col rounded-lg border border-white/5 p-4 lg:px-6 lg:py-4">
        <h3 class="flex items-center text-2xl font-semibold text-white mb-3 gap-4 group">
          {image && (
            <img
              class="rounded-lg size-8"
              src={image}
              alt="icono del proyecto"
            />
          )}
          <a href={link}>{title}</a>
          {link && (
            <LinkIcon class="size-4 text-gray-400   group-hover:text-white transition-all duration-300" />
          )}
        </h3>
        <p class="text-lg mb-4 text-gray-400 text-pretty">{description}</p>
        <ul class="flex flex-wrap gap-3">
          {tags.map((tag) => (
            <li class="bg-white/10 rounded-full px-3 py-1 text-sm">{tag}</li>
          ))}
        </ul>
      </article>
    );
  })
}
